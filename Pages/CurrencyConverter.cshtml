@page
@model CurrencyConverter_CL.Pages.CurrencyConverterModel

@{
    ViewData["Title"] = "Currency Converter";
}

<h1>Currency Converter</h1>

<form method="post">
    <label for="sourceCurrency">Source Currency:</label>
    <select id="sourceCurrency" name="sourceCurrency">
        <option value="USD">USD</option>
        <option value="EUR">EUR</option>
        <option value="GBP">GBP</option>
        <option value="JPY">JPY</option>
        <option value="AUD">AUD</option>
    </select>

    <label for="targetCurrency">Target Currency:</label>
    <select id="targetCurrency" name="targetCurrency">
        <option value="USD">USD</option>
        <option value="EUR">EUR</option>
        <option value="GBP">GBP</option>
        <option value="JPY">JPY</option>
        <option value="AUD">AUD</option>
    </select>

    <label for="amount">Amount:</label>
    <input type="number" id="amount" name="amount" />

    <button type="submit">Convert</button>
</form>

<div id="result">
    @if (Model.ConversionResult != null)
    {
        <p>@Model.ConversionResult.Value @Model.ConversionResult.Source is @Model.ConversionResult.Result @Model.ConversionResult.Target</p>
    }
</div>

<table>
    <thead>
    <tr>
        <th>Date</th>
        <th>Source</th>
        <th>Target</th>
        <th>Value</th>
        <th>Result</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.ConversionHistory != null)
    {
        @foreach (var conversion in Model.ConversionHistory)
        {
            <tr>
                <td>@conversion.Date</td>
                <td>@conversion.Source</td>
                <td>@conversion.Target</td>
                <td>@conversion.Value</td>
                <td>@conversion.Result</td>
            </tr>
        }
    }
    </tbody>
</table>

<script>
    function convert() {
        // Implement currency conversion logic here
    }
</script>
